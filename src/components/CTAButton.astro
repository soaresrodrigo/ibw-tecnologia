---
import Whatsapp from "@assets/icons/Whatsapp.astro";

interface Props {
  title?: string;
  text?: string;
}

const {
  title = "Solicitar serviço",
  text = "Olá! Vim através do site e gostaria de tirar algumas dúvidas sobre seus serviços!",
} = Astro.props;
---

<a
  class="cta btn btn-success text-uppercase p-2"
  href={`https://api.whatsapp.com/send?phone=+5571987465932&text=${text}`}
  target="_blank"
>
  <Whatsapp />
  <span>{title}</span>
</a>

<style>
  .cta {
    display: inline-flex;
    width: 100%;
    font-weight: bold;
    align-items: center;
    justify-content: center;
    gap: 10px;
    position: relative;
  }
</style>
