---
import Facebook from "@assets/icons/Facebook.astro";
import Instagram from "@assets/icons/Instagram.astro";
import Tiktok from "@assets/icons/Tiktok.astro";
import Whatsapp from "@assets/icons/Whatsapp.astro";
import Youtube from "@assets/icons/Youtube.astro";

const title = import.meta.env.SITE_TITLE;
const currentYear = new Date().getFullYear();
---

<div class="footer-dark bg-ibw-dark">
  <footer>
    <div class="container">
      <div class="row mb-5">
        <div class="col-lg-3 mx-auto">
          <img
            src="/images/logo.png"
            alt="logo"
            height="100"
            class="mx-auto d-block"
          />
        </div>
      </div>
      <div class="row">
        <div class="col-lg-5 col-sm-8 item text">
          <h3>{title}</h3>
          <p>Empresa Especializada em Manutenção de Notebook e Computador.</p>
          <p>Soluções em Tecnologia para Empresas.</p>
        </div>
        <div class="col-lg-3 col-sm-4 item">
          <h3>Contatos</h3>
          <ul>
            <li>
              <a
                href="mailto:contato@ibwtecnologia.com.br"
                aria-label="Email"
                title="Email">contato@ibwtecnologia.com.br</a
              >
            </li>
            <li>
              <a
                href="tel:+5571987465932"
                aria-label="Telefone"
                title="Telefone">(71) 98746-5932</a
              >
            </li>
          </ul>
        </div>
        <div class="col-sm-8 col-lg-2 item">
          <h3>Endereço</h3>
          <ul>
            <li>
              <a
                target="_blank"
                href="https://www.google.com/maps/search/Tv.%20Ant%C3%B4nio%20Fel%C3%ADcio%20P%C3%ADmentel%2C%2013A%20-%20Centro%2C%20Lauro%20de%20Freitas%20-%20BA%2C%2042700-000%2C%20Brasil/@-12.8945,-38.3225,17z?hl=pt-BR"
                >Rua Manoel Raimundo de Souza, 13 - 1º andar - Centro, Lauro de
                Freitas - BA, 42702-660</a
              >
            </li>
          </ul>
        </div>
        <div class="col-sm-4 col-lg-2 item text">
          <h3>Horários</h3>
          <p>seg-sex: 9hrs - 17hrs</p>
          <p>sab: 8hrs - 12hrs</p>
        </div>

        <div class="col-lg-12 social">
          <a href="#"><Instagram /></a>
          <a href="#"><Facebook /></a>
          <a href="#"><Youtube /></a>
          <a href="#"><Whatsapp /></a>
          <a href="#"><Tiktok /></a>
        </div>
      </div>
      <hr />
      <p class="copyright">
        <b>{title}</b> © {currentYear} | Desenvolvido por <a
          target="_blank"
          href="https://comecedaqui.github.io"
        >
          &gt; Comece Daqui _
        </a>
      </p>
    </div>
  </footer>
</div>

<style lang="scss">
  .footer-dark {
    padding: 50px 0;
    color: #f0f9ff;
    h3 {
      margin-top: 0;
      margin-bottom: 12px;
      font-weight: bold;
      font-size: 16px;
    }
    ul {
      padding: 0;
      list-style: none;
      line-height: 1.6;
      font-size: 14px;
      margin-bottom: 0;
      a {
        color: inherit;
        text-decoration: none;
        opacity: 0.6;
        &:hover {
          opacity: 0.8;
        }
      }
    }
  }

  .social {
    max-width: 420px;
    gap: 20px;
    margin: 0 auto;
    display: flex;
    justify-content: center;

    a {
      cursor: pointer;
      color: #888;

      &:hover {
        color: #999;
      }
    }
  }

  @media (max-width: 767px) {
    .footer-dark .item {
      text-align: center;
      padding-bottom: 20px;
    }
  }

  .footer-dark .item.text {
    margin-bottom: 36px;
  }

  @media (max-width: 767px) {
    .footer-dark .item.text {
      margin-bottom: 0;
    }
  }

  .footer-dark .item.text p {
    opacity: 0.6;
    margin-bottom: 0;
  }

  .footer-dark .copyright {
    text-align: center;
    padding-top: 24px;
    opacity: 0.3;
    font-size: 15px;
    margin-bottom: 0;

    a {
      font-weight: bold;
      display: inline-block;
      color: white;
      text-decoration: dashed;

      &:hover {
        color: #6c5ce7;
      }
    }
  }
</style>
