---
import Facebook from "@assets/icons/Facebook.astro";
import Instagram from "@assets/icons/Instagram.astro";
import Tiktok from "@assets/icons/Tiktok.astro";
import Whatsapp from "@assets/icons/Whatsapp.astro";
import Youtube from "@assets/icons/Youtube.astro";

const title = import.meta.env.SITE_TITLE;
const currentYear = new Date().getFullYear();
---

<div class="footer-dark bg-ibw-dark">
  <footer>
    <a
      href="https://api.whatsapp.com/send?phone=+5571987465932&text=Olá!%20Vim%20através%20do%20site%20e%20gostaria%20de%20tirar%20algumas%20dúvidas%20sobre%20seus%20serviços!"
      target="_blank"
      class="float-whatsapp bg-success"
      title="Como posso ajudar?"
    >
      <Whatsapp />
    </a>
  </footer>
  <div class="container">
    <div class="row mb-5">
      <div class="col-lg-3 mx-auto">
        <img
          src="/images/logo.webp"
          alt="logo"
          height="100"
          class="mx-auto d-block"
        />
      </div>
    </div>
    <div class="row">
      <div class="col-lg-5 col-sm-8 item text">
        <div class="title-icon">
          <img src="/images/logo.webp" alt="" width="24" height="18" />
          <h3>{title}</h3>
        </div>
        <p>Empresa Especializada em Manutenção de Notebook e Computador.</p>
        <p>Soluções em Tecnologia para Empresas.</p>
      </div>
      <div class="col-lg-3 col-sm-4 item text">
        <div class="title-icon">
          <img src="/icons/phone.svg" alt="" width="24" height="18" />
          <h3>Contatos</h3>
        </div>
        <ul>
          <li>
            <a
              href="mailto:contato@ibwtecnologia.com.br"
              aria-label="Email"
              title="Email">contato@ibwtecnologia.com.br</a
            >
          </li>
          <li>
            <a href="tel:+5571987465932" aria-label="Telefone" title="Telefone"
              >(71) 98746-5932</a
            >
          </li>
        </ul>
      </div>
      <div class="col-sm-8 col-lg-2 item text">
        <div class="title-icon">
          <img src="/icons/address.svg" alt="" width="24" height="18" />
          <h3>Endereço</h3>
        </div>
        <ul>
          <li>
            <a
              target="_blank"
              href="https://www.google.com/maps/search/Tv.%20Ant%C3%B4nio%20Fel%C3%ADcio%20P%C3%ADmentel%2C%2013A%20-%20Centro%2C%20Lauro%20de%20Freitas%20-%20BA%2C%2042700-000%2C%20Brasil/@-12.8945,-38.3225,17z?hl=pt-BR"
              >Rua Manoel Raimundo de Souza, 13 - 1º andar - Centro, Lauro de
              Freitas - BA, 42702-660</a
            >
          </li>
        </ul>
      </div>
      <div class="col-sm-4 col-lg-2 item text">
        <div class="title-icon">
          <img src="/icons/clock.svg" alt="" width="24" height="18" />
          <h3>Horários</h3>
        </div>
        <p>seg-sex: 9hrs - 17hrs</p>
        <p>sab: 8hrs - 12hrs</p>
      </div>

      <div class="col-lg-12 social">
        <a href="https://www.instagram.com/ibwtecnologia" target="_blank"
          ><Instagram /></a
        >
        <a href="https://www.facebook.com/ibwtecnologia" target="_blank"
          ><Facebook /></a
        >
        <a href="https://www.youtube.com/c/IBWTECNOLOGIA" target="_blank"
          ><Youtube /></a
        >
        <a
          href="https://api.whatsapp.com/send?phone=+5571987465932&text=Olá!%20Vim%20através%20do%20site%20e%20gostaria%20de%20tirar%20algumas%20dúvidas%20sobre%20seus%20serviços!"
          target="_blank"><Whatsapp /></a
        >
        <a
          href="https://www.tiktok.com/@ibwtecnologia?lang=pt-BR"
          target="_blank"><Tiktok /></a
        >
      </div>
    </div>
    <hr />
    <p class="copyright">
      <b>{title}</b> © {currentYear} | Desenvolvido por <a
        target="_blank"
        href="https://comecedaqui.github.io"
      >
        &gt; Comece Daqui _
      </a>
    </p>
  </div>
</div>

<style lang="scss">
  .float-whatsapp {
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    bottom: 5em;
    right: 5em;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    cursor: pointer;
    transform: scale(1);
    transition: 0.2s;
    opacity: 0.3;

    color: white;

    &:hover {
      color: white;
      opacity: 1;
      transform: scale(1.1);
      box-shadow: 10px 10px 19px -7px rgba(0, 0, 0, 0.39);
    }

    &[title]:hover:before {
      content: attr(title);
      position: absolute;
      left: -210%;
      top: 50%;
      padding: 10px;
      background-color: rgba(0, 0, 0, 1);
      color: #fff;
      font-size: 1em;
      white-space: nowrap;
      border-radius: 5px;
    }

    &[title]:hover:after {
      content: "";
      position: absolute;
      left: -15px;
      top: 50%;
      margin-top: -5px;
      border-width: 5px 5px 5px 0;
      border-style: solid;
      border-color: transparent #000 transparent transparent;
    }
  }
  .footer-dark {
    padding: 50px 0;
    color: #f0f9ff;
    h3 {
      margin-top: 0;
      margin-bottom: 12px;
      font-weight: bold;
      font-size: 16px;
    }
    ul {
      padding: 0;
      list-style: none;
      line-height: 1.6;
      font-size: 14px;
      margin-bottom: 0;
      a {
        color: inherit;
        text-decoration: none;
        opacity: 0.6;
        &:hover {
          opacity: 0.8;
        }
      }
    }

    .item {
      &.text {
        .title-icon {
          display: inline-flex;
          gap: 5px;
        }
      }
    }
  }

  .social {
    max-width: 420px;
    gap: 20px;
    margin: 0 auto;
    display: flex;
    justify-content: center;

    a {
      cursor: pointer;
      color: #888;

      &:hover {
        color: #999;
      }
    }
  }

  @media (max-width: 767px) {
    .footer-dark .item {
      text-align: center;
      padding-bottom: 20px;

      &.text {
        display: inline-flex;
        margin-bottom: 36px;
      }
    }
  }

  @media (max-width: 767px) {
    .footer-dark .item.text {
      margin-bottom: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
  }

  .footer-dark .item.text p {
    opacity: 0.6;
    margin-bottom: 0;
  }

  .footer-dark .copyright {
    text-align: center;
    padding-top: 24px;
    opacity: 0.3;
    font-size: 15px;
    margin-bottom: 0;

    a {
      color: inherit;
      text-decoration: none;
      opacity: 0.6;
      &:hover {
        opacity: 0.8;
      }
    }
  }
</style>
