<DefaultPage title="Multi tecnologia" description="">
  <div class="bg-masterhead divider">
    <header class="bg-blur-dark header-config">
      <div class="text-content">
        <h1>IBW</h1>
        <p>Multi Assistência</p>
        <a  href="#services" class="btn btn-ibw bg-ibw btn-xl text-uppercase p-3">Conheça os Nossos Serviços</a>
      </div>
    </header>
  </div>
  <!-- SERVICES -->
  <section class="section-config" id="services">
    <div class="container">
      <div class="title-config">
        <h1>Serviços</h1>
        <p>Clique em <mark>Saiba mais</mark> para obter mais detalhes.</p>
      </div>

      <div class="row m-2">
        <div class="col-lg-4 col-sm-12 mb-5">
          <Card
            icon="/icons/maintenance.svg"
            title="Manutenção"
            description="Somos especialistas em manutenção de notebooks e computadores. Temos um laboratório completo para reparação do seu equipamento."
            buttonCTA="Saiba mais"
            buttonLink={"/servicos/manutencao"}
          />
        </div>
        <div class="col-lg-4 col-sm-12 mb-5">
          <Card
            icon="/icons/business.svg"
            title="Soluções empresariais"
            description="Oferecemos soluções de T.I para empresas. Dentre as soluções estão: Redes, CFTV, Alarmes, Interfonia e Controle de Acesso."
            buttonCTA="Saiba mais"
            buttonLink={"/servicos/solucoes-empresariais"}
          />
        </div>
        <div class="col-lg-4 col-sm-12 mb-5">
          <Card
            icon="/icons/sale.svg"
            title="Vendas"
            description="Compre computadores e itens de informática na IBW. Pc Gamers, memórias, SSD, mouses, teclados e muito mais."
            buttonCTA="Saiba mais"
            buttonLink={"/servicos/produtos"}
          />
        </div>
      </div>
    </div>
  </section>

  <section
    class="section-config bg-blue-dark align-items-center justify-content-around video-presentation">
    <div class="text-white">
      <div class="row">
        <div class="col-12 mb-5">
          <h1 class="text-center text-uppercase">Veja um pouco como a <mark>IBW</mark> trabalha...</h1>
        </div>
        <div class="container">
          <div class="row mx-auto">
            <iframe
              class="shadow-light col-lg-3 col-sm-12 mb-5 p-0"
              src="https://www.youtube.com/embed/0nDdOe7pWlY"
              title="YouTube video player"
              height="300px"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen
            >
            </iframe>
            <iframe
              class="shadow-light col-lg-3 col-sm-12 mb-5 p-0"
              src="https://www.youtube.com/embed/0nDdOe7pWlY"
              height="300px"
              title="YouTube video player"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen
            >
            </iframe>
            <iframe
              class="shadow-light col-lg-3 col-sm-12 mb-5 p-0"
              height="300px"
              src="https://www.youtube.com/embed/0nDdOe7pWlY"
              title="YouTube video player"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen
            >
            </iframe>

          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- QUANTITY SERVICES -->
  <section class="section-config bg-dark">
    <div class="container">
      <div class="row text-secondary">
        <div
          class="col-lg-3 col-sm-12 mb-5 m-1 p-3 mx-auto shadow-light border-top border-white"
        >
          <h2>300+</h2>
          <p class="text-white">Clientes atendidos</p>
        </div>
        <div
          class="col-lg-3 col-sm-12 mb-5 m-1 p-3 mx-auto shadow-light border-top border-warning"
        >
          <h2>200+</h2>
          <p class="text-warning">Avaliações</p>
        </div>
        <div
          class="col-lg-3 col-sm-12 mb-5 m-1 p-3 mx-auto shadow-light border-top border-danger"
